<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
       <%= @book.errors.count %>error prohibited this obj from being saved:
       <ul>
        <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
      <% end %>
      <%= form_with model: @book, method: :patch do |f| %>
       <label for="book_title">Title</label><br>
       <%= f.text_field :title, class: "form-control book_title" %><br>
       <label for="book_opinion">Opinion</label><br>
       <%= f.text_area :body, class: "form-control book_body"%><br>
       <%= f.submit 'Update Book', class: "btn btn-success" %>
      <% end %>

      <br>
      <%= link_to "Show", book_path %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>